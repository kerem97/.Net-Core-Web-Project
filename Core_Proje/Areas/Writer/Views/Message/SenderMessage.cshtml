
@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Giden Kutusu</h4>
            <br />
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Alıcı</th>
                            <th>Tarih</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {                      
                            <tr>
                                <th>@x.WriterMessageID</th>
                                <td>@x.Subject</td>
                                <td>@x.ReceiverName</td>
                                <td>@(((DateTime)x.Date).ToString("dd-MMM-yyyy"))</td>

                                <td><a href="/Writer/Message/ReceiverMessageDetails/@x.WriterMessageID" class="btn btn-outline-info">Mesajı Gör
                                <td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>